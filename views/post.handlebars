{{#extend 'layouts/main'}}
{{#content 'body'}}
<h1>Post Details</h1>

<div>
    <h2>{{post.title}}</h2>
    <p>Posted by: {{post.User.username}}</p>
    <p>{{post.createdAt}}</p>

    <h3>Comments:</h3>
    {{#each post.Comments}}
    <div>
        <p>{{this.content}}</p>
        <p>Comment by: {{this.User.username}}</p>
        <p>Commented at: {{this.createdAt}}</p>
    </div>
    {{/each}}
</div>
{{/content}}
{{/extend}}